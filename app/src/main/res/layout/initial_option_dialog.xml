<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/abc_dialog_padding_top_material"
    style="@style/AlertDialog.AppCompat.Light"
    android:clickable="true">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:id="@+id/layoutRegion"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/UI_region"
                    android:id="@+id/textView8"
                    android:labelFor="@+id/imageButtonFlag" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <ImageButton
                    android:layout_width="@dimen/abc_alert_dialog_button_bar_height"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButtonFlag"
                    android:onClick="changeRegion"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/layoutSex"
                android:layout_below="@id/layoutRegion"
                android:layout_marginTop="@dimen/margin_row"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/UI_option_dialog_chooseSex"
                    android:id="@+id/textView6"
                    android:labelFor="@+id/toggleButton" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toggleButton"
                    android:textOn="@string/UI_option_dialog_boy"
                    android:textOff="@string/UI_option_dialog_girl"
                    android:textStyle="italic"
                    android:background="@drawable/boton_sexo"
                    android:checked="true" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/UI_option_dialog_chooseListSize"
                android:id="@+id/textView7"
                android:labelFor="@+id/seekBar"
                android:layout_below="@+id/layoutSex"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/margin_row" />

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_below="@+id/textView7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:progress="@integer/default_percent_selected"
                android:max="99" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/textViewCount"
                android:layout_below="@+id/seekBar"
                android:layout_alignRight="@+id/seekBar"
                android:layout_alignEnd="@+id/seekBar" />

            <Switch
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/UI_option_dialog_choseMode"
                android:id="@+id/switch1"
                android:checked="false"
                android:layout_below="@+id/textViewCount"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:enabled="false"
                android:layout_marginTop="@dimen/margin_row" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>